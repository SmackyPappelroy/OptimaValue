<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OptimaValue.Wpf.UserControls"
             xmlns:dd="urn:gong-wpf-dragdrop"
             x:Class="OptimaValue.Wpf.UserControls.TagListControl"
             mc:Ignorable="d" 
             DataContext="this"
             d:DataContext="this"
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <DataGrid x:Name="DataGrid" d:ItemsSource="{Binding Model.GridItems}" 
              ItemsSource="{Binding Model.GridItems}"
              SelectionMode="Extended"
              IsReadOnly="True"
              dd:DragDrop.DropHandler="{Binding}"
              dd:DragDrop.IsDragSource="True"
              dd:DragDrop.IsDropTarget="True" IsEnabled="False"/>
  </Grid>
</UserControl>
